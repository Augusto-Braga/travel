datasource db {
  provider = "postgresql"
  url      = "postgresql://myuser:mypassword@localhost:5432/database"
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        String   @id @default(uuid())
  name      String
  email     String   @unique
  password  String
  createdAt DateTime @default(now()) @map("createdAt")
  updatedAt DateTime @updatedAt @map("updatedAt")
  status    Boolean  @default(true)
  role      String   @default("user") @map("role")

  @@map("users")
}

model Driver {
  id            String   @id @default(uuid())
  name          String
  description   String
  vehicle       String
  review        Json
  price_per_km  Float
  min_km        Int
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  @@map("drivers")
}